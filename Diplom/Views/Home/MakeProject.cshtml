@{
    ViewBag.Title = "MakeProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Подбор проекта</h2>
@using (Html.BeginForm())
{
<div style="margin-bottom:4px">
    Введите название проекта:
    <input type="text" name="projectName" placeholder="Название">
</div>
<div style="margin-bottom:4px">
    Введите бюджет:
    <input type="text" name="budget" placeholder="Бюджет" />
</div>
<div style="margin-bottom:4px">
    Минимальная скорость передачи сигнала:

    <select type="number" name="speed">
        <option value="500">500 Mbs</option>
        <option value="1000">1000 Mbs</option>
    </select>
</div>
<br>
<h4>Введите нужное количество категорий товаров</h4>
    foreach (var category in ViewBag.Category)
    {
<div style="margin-bottom:4px">
    <text>@category.Name:</text>

    <input type="number" name="categories[@category.Id]" style="width:50px" />
</div>
    }

<input type="submit" value="Отправить" />
}




